@model Company;

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Company </h2>
                    <hr />
                </div>
                <div asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Street Address</label>
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>State</label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Postal Code</label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text text-danger"></span>
                </div>
                
                
                @if (Model.Id != 0)
                {
                    <button class="btn btn-primary" style="width:150px" type="submit">Update</button>
                }
                else
                {
                    <button class="btn btn-primary" style="width:150px" type="submit">Create</button>
                }

                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary border-1" style="width:150px">Back to list</a>
            </div>
        </div>
        
    </div>
    
</form>

@section Scripts{
    
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}



