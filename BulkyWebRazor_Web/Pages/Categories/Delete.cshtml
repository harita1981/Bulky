@page
@model BulkyWebRazor_Web.Pages.Categories.DeleteModel



<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label>Category Name</label>
            <input asp-for="Category.Name" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label>Display Order</label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
            
        </div>
        <button class="btn btn-danger" style="width:150px" type="submit">Delete</button>
        <a asp-asp-page="/categories/index" asp-action="Index" class="btn btn-outline-secondary border-1" style="width:150px">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}




