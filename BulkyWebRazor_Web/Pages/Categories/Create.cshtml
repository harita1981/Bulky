@page
@model BulkyWebRazor_Web.Pages.Categories.CreateModel



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label>Category Name</label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Display Order</label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text text-danger"></span>
        </div>
        <button class="btn btn-primary" style="width:150px" type="submit">Create</button>
        <a asp-page="/categories/index"  class="btn btn-outline-secondary border-1" style="width:150px">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}




