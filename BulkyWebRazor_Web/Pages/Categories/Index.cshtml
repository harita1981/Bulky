@page
@model BulkyWebRazor_Web.Pages.Categories.IndexModel



<div class="container">
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6 text-end">
            <a asp-page="/categories/create"  class="btn btn-primary "><i class="bi bi-plus-circle"></i> Create New Category</a>
    </div>
</div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a class="btn btn-primary" asp-page="/categories/edit"  asp-route-id="@obj.Id">Edit</a>
                    <a class="btn btn-danger" asp-page="/categories/delete"  asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

